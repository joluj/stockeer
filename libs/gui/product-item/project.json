{
  "projectType": "library",
  "root": "libs/gui/product-item",
  "sourceRoot": "libs/gui/product-item/src",
  "prefix": "stockeer",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/gui/product-item"],
      "options": {
        "jestConfig": "libs/gui/product-item/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/gui/product-item/src/**/*.ts",
          "libs/gui/product-item/src/**/*.html"
        ]
      }
    },
    "compodoc": {
      "executor": "@twittwer/compodoc:compodoc",
      "options": {
        "tsConfig": "libs/gui/product-item/tsconfig.lib.json",
        "outputPath": "dist/compodoc/gui-product-item"
      },
      "configurations": {
        "json": {
          "exportFormat": "json"
        }
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/angular",
        "port": 4400,
        "config": {
          "configFolder": "libs/gui/product-item/.storybook"
        },
        "projectBuildConfig": "gui-product-item:build-storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/angular",
        "outputPath": "dist/storybook/gui-product-item",
        "config": {
          "configFolder": "libs/gui/product-item/.storybook"
        },
        "assets": [
          {
            "glob": "**",
            "input": "apps/app/src/assets",
            "output": "./assets"
          },
          {
            "glob": "**/*.svg",
            "input": "node_modules/ionicons/dist/ionicons/svg",
            "output": "./svg"
          }
        ],
        "styles": ["apps/app/src/styles.scss"],
        "projectBuildConfig": "gui-product-item:build-storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
